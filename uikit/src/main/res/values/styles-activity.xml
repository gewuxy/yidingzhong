<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- toolbar 文本 -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:itemTextAppearance">?android:attr/actionMenuTextAppearance</item>
        <item name="actionMenuTextAppearance">@style/ActionMenuTheme</item>
    </style>

    <!-- toolbar的弹出菜单 -->
    <style name="ActionMenuTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/gray_333333</item>
    </style>

    <style name="MyToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <!-- Required for pre-Lollipop. -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">-4dip</item>
        <item name="android:paddingLeft">20dip</item>
    </style>
</resources>