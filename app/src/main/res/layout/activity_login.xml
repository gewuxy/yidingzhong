<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_bg"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:text="账户："/>
            <EditText
                android:id="@+id/et_phone"
                android:drawableLeft="@drawable/dl_zf"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:layout_width="246dp"
                android:layout_height="28dp"
                android:hint="请输入手机号"
                android:background="@drawable/bg_edittext_selector"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="登录密码："/>
            <EditText
                android:id="@+id/et_pw"
                android:drawableLeft="@drawable/dl_mm"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:layout_width="246dp"
                android:layout_height="28dp"
                android:hint="请输入密码"
                android:background="@drawable/bg_edittext_selector"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="40dp">
            <CheckBox
                android:id="@+id/cb_remember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住密码"
                android:textColor="#66000000"/>
            <TextView
                android:id="@+id/tv_forget_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:text="忘记密码？"
                android:textColor="#66000000"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="291dp"
            android:layout_height="33dp"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="22dp"
            android:background="@color/red"
            android:text="立即登录"
            android:textColor="@color/white"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_register"
            android:layout_width="291dp"
            android:layout_height="33dp"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/fill_white_red_border_selector"
            android:text="快速注册"
            android:textColor="@color/bg_toolbar"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical">
            <View
                android:layout_width="111dp"
                android:layout_height="0.5dp"
                android:background="@color/divider_e4e4e4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="第三方账号快速登录"/>
            <View
                android:layout_width="111dp"
                android:layout_height="0.5dp"
                android:background="@color/divider_e4e4e4"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>