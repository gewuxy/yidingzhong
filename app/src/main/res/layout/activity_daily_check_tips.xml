<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/qdsm_bj"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:paddingRight="10dp">
                <LinearLayout
                    android:id="@+id/daily_check_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/wenhao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/ic_wenhao"/>
                    <TextView
                        android:id="@+id/check_explanation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我要签到"
                        android:textColor="@color/white" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="尊敬的会员："
                        android:textSize="12sp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/fill_white_borderless_corners_14">
                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/userAvatar"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            fresco:roundAsCircle="true"/>
                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:textSize="12sp"
                            android:textColor="#333" />
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/qiandao_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/qdsm_qdbg">
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/qdsm_yqd"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:layout_below="@id/imageView">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="累计"
                            android:textSize="10sp"/>
                        <TextView
                            android:id="@+id/num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red"
                            android:text="3"
                            android:textSize="10sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="天"
                            android:textSize="10sp"/>
                    </LinearLayout>
                </RelativeLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/qiandao_container"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/qdsm_djqd"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/daily_check_explanation_margin"
                android:layout_marginTop="22dp"
                android:src="@drawable/qdsm_mrqd"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:layout_marginRight="@dimen/daily_check_explanation_margin"
                android:layout_marginLeft="@dimen/daily_check_explanation_margin"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:lineSpacingExtra="2dp"
                android:background="@drawable/lbdj_bg"
                android:text="@string/daily_check_description"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/daily_check_explanation_margin"
                android:layout_marginTop="8dp"
                android:src="@drawable/lbdj"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:layout_marginRight="@dimen/daily_check_explanation_margin"
                android:layout_marginLeft="@dimen/daily_check_explanation_margin"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:lineSpacingExtra="2dp"
                android:background="@drawable/lbdj_bg"
                android:text="@string/gift_pack_award"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/daily_check_explanation_margin"
                android:layout_marginTop="8dp"
                android:src="@drawable/hdsm"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:layout_marginRight="@dimen/daily_check_explanation_margin"
                android:layout_marginLeft="@dimen/daily_check_explanation_margin"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:lineSpacingExtra="2dp"
                android:background="@drawable/lbdj_bg"
                android:text="@string/activity_explanation"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>