<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="102dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#797979"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#797979"
                android:textSize="10sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获奖者："
                    android:textSize="10sp"
                    android:textColor="#333"/>
                <TextView
                    android:id="@+id/prize_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#35A4FE"
                    android:textSize="10sp"
                    android:singleLine="true"
                    android:ellipsize="end"/>
            </LinearLayout>
            <TextView
                android:id="@+id/num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/prize_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zxjx"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/product"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                fresco:viewAspectRatio="1"
                fresco:actualImageScaleType="centerInside"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="0.5dp"
        android:layout_height="72dp"
        android:background="@color/divider_e4e4e4"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="102dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/total2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#797979"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/code2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#797979"
                android:textSize="10sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获奖者："
                    android:textSize="10sp"
                    android:textColor="#333"/>
                <TextView
                    android:id="@+id/prize_name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#35A4FE"
                    android:textSize="10sp"
                    android:singleLine="true"
                    android:ellipsize="end"/>
            </LinearLayout>
            <TextView
                android:id="@+id/num2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/prize_number2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zxjx"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/product2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                fresco:viewAspectRatio="1"
                fresco:actualImageScaleType="centerInside"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>