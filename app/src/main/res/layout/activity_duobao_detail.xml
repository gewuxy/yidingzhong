<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <!-- banner -->
            <FrameLayout
                android:id="@+id/fl_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.yidingzhong.uikit.common.widget.banner.AutoScrollViewPager
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/default_bg" />

                <com.yidingzhong.uikit.common.widget.banner.FocuseCircleView
                    android:id="@+id/banner_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="10dp" />

            </FrameLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/gz_tp"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:drawableLeft="@drawable/jxz"
                android:drawablePadding="4dp"
                android:layout_marginRight="@dimen/duobao_detail_margin"
                android:layout_marginLeft="@dimen/duobao_detail_margin"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/duobao_detail_margin"
                android:layout_marginLeft="@dimen/duobao_detail_margin"
                android:layout_marginTop="12dp"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginRight="@dimen/duobao_detail_margin"
                android:layout_marginLeft="@dimen/duobao_detail_margin"
                android:textSize="9sp"
                android:textColor="#666"/>
            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginRight="@dimen/duobao_detail_margin"
                android:layout_marginLeft="@dimen/duobao_detail_margin"
                android:layout_marginTop="8dp"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:max="100"
                android:progress="50"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/duobao_detail_margin"
                android:layout_marginLeft="@dimen/duobao_detail_margin"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="#666"
                    android:text="已参与：" />
                <TextView
                    android:id="@+id/occupy_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f25500"
                    android:textSize="9sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="#666"
                    android:text="人次" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="#666"
                    android:text="剩余：" />
                <TextView
                    android:id="@+id/remaining_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f25500"
                    android:textSize="9sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="#666"
                    android:text="人次" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/duobao_detail_margin"
                android:layout_marginLeft="@dimen/duobao_detail_margin"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#343434"
                    android:textSize="8sp"
                    android:text="选择数量："/>
                <TextView
                    android:id="@+id/decrease"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:gravity="center"
                    android:background="@drawable/fill_white_gray_border_normal"
                    android:textSize="10sp"
                    android:text="-"/>
                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:gravity="center"
                    android:background="@drawable/fill_white_gray_border_normal"
                    android:textSize="10sp"
                    android:textColor="@color/bg_toolbar"
                    android:text="1"/>
                <TextView
                    android:id="@+id/increase"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:gravity="center"
                    android:background="@drawable/fill_white_gray_border_normal"
                    android:textSize="10sp"
                    android:text="+"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="扫尾"
                    android:textSize="12sp"
                    android:textColor="@color/bg_toolbar"
                    android:background="@drawable/fill_white_gray_border_normal"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gwc_dcy"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginRight="@dimen/duobao_detail_margin"
                android:layout_marginLeft="@dimen/duobao_detail_margin"
                android:layout_marginTop="15dp"
                android:background="@drawable/fill_white_gray_border_corner_8">
                <TextView
                    android:id="@+id/buy_tips"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#33666666"
                    android:textSize="9sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666"
                        android:textSize="9sp"
                        android:text="您还没有参与本次夺宝，点击"/>
                    <TextView
                        android:id="@+id/login_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="9sp"
                        android:text="登录"/>
                </LinearLayout>
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/duobao_detail_margin"
                android:layout_marginRight="@dimen/duobao_detail_margin"
                android:background="@drawable/fill_white_gray_border_normal"
                android:text="您还没有参与本次夺宝"
                android:textColor="#FFC732"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/divider_e8e8e8"
                android:layout_marginTop="22dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/detail"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="商品详情"
                    android:textSize="12sp"
                    android:textColor="@color/bg_toolbar"
                    android:gravity="center"/>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="20dp"
                    android:background="@color/divider_e4e4e4"/>
                <TextView
                    android:id="@+id/all_occupy_record"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="所有参与记录"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:gravity="center"/>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="20dp"
                    android:background="@color/divider_e4e4e4"/>
                <TextView
                    android:id="@+id/previous_result"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="往期揭晓"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:gravity="center"/>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="20dp"
                    android:background="@color/divider_e4e4e4"/>
                <TextView
                    android:id="@+id/share"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="晒单分享"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:gravity="center"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_e4e4e4"/>
            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:scrollbars="none">

            </WebView>
            <com.yidingzhong.uikit.common.widget.listview.ExpandListView
                android:id="@+id/lv_all_occupy_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

            </com.yidingzhong.uikit.common.widget.listview.ExpandListView>
            <com.yidingzhong.uikit.common.widget.listview.ExpandListView
                android:id="@+id/lv_previous_jiexiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

            </com.yidingzhong.uikit.common.widget.listview.ExpandListView>
            <!--晒单分享-->
            <LinearLayout
                android:id="@+id/share_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/period"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="4dp"
                        android:paddingRight="6dp"
                        android:paddingTop="4dp"
                        android:paddingLeft="6dp"
                        android:background="#727272"
                        android:textColor="@color/white"
                        android:text="第333期"/>
                    <TextView
                        android:id="@+id/share_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="#333"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/shareUserAvatar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        fresco:roundAsCircle="true"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/shareUserName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#333"
                                android:textSize="12sp"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_user_level"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="#333"/>
                            <TextView
                                android:id="@+id/location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="#333"/>
                        </LinearLayout>

                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:id="@+id/shareContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#585858"
                    android:textSize="12sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_lottery"/>
                    <TextView
                        android:id="@+id/share_product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#64A2EF"
                        android:textSize="10sp"
                        android:singleLine="true"
                        android:ellipsize="end"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:orientation="horizontal">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/sdv_1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        fresco:viewAspectRatio="1"/>
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/sdv_2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content"
                        fresco:viewAspectRatio="1"/>
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/sdv_3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        fresco:viewAspectRatio="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/home_margin"
                    android:layout_marginRight="@dimen/home_margin"
                    android:background="@drawable/fill_white_gray_border_normal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_eye"/>
                        <TextView
                            android:id="@+id/check_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_a3a3a3"/>
                    </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="14dp"
                        android:background="@color/gray_a3a3a3"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_comment"/>
                        <TextView
                            android:id="@+id/comment_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_a3a3a3"/>
                    </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="14dp"
                        android:background="@color/gray_a3a3a3"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_favorite"/>
                        <TextView
                            android:id="@+id/favorite_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_a3a3a3"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/divider_e8e8e8"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rqtj"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/jcn"/>
            </RelativeLayout>
            <com.yidingzhong.uikit.common.widget.gridview.ExpandGridView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="4dp"
                android:verticalSpacing="3dp"
                android:numColumns="2"
                android:listSelector="@android:color/transparent">

            </com.yidingzhong.uikit.common.widget.gridview.ExpandGridView>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/cpxq_dbbj">
        <LinearLayout
            android:id="@+id/duobao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/transparent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_db"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即夺宝"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/add_to_shoppingCar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/cpxq_jrgwc">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_gwc"
                android:layout_marginRight="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加入购物车"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>