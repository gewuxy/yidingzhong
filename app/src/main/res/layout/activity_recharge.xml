<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/toolbar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/avatar"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginRight="10dp"
                fresco:roundAsCircle="true"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#99000000"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/zh"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账户："
                        android:textColor="#a0a0a0"/>
                    <TextView
                        android:id="@+id/tv_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF7474"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/jf"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分："
                        android:textColor="#a0a0a0"/>
                    <TextView
                        android:id="@+id/tv_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF7474"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_cz_record"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:text="充值记录"
                android:textSize="12sp"
                android:textColor="#E64F26"
                android:background="@drawable/fill_white_red_border_selector"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_e4e4e4"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="5dp"
            android:textColor="#4d4d4d"
            android:text="1、选择充值金额"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/bg_toolbar"
            android:textSize="12sp"
            android:text="新用户首充送红包"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="27dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/fee1"
                    android:layout_width="78dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/fill_white_red_border_corner_8"
                    android:text="20"
                    android:gravity="center"
                    android:textColor="@color/bg_toolbar"/>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/fee2"
                        android:layout_width="78dp"
                        android:layout_height="40dp"
                        android:background="@drawable/fill_white_red_border_corner_8"
                        android:text="50"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:textColor="@color/bg_toolbar"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_gravity="top|right"
                        android:layout_marginTop="8dp"
                        android:textSize="8sp"
                        android:text="领红包"
                        android:textColor="@color/bg_toolbar"
                        android:gravity="center"
                        android:background="@drawable/fill_white_red_border_corner_8"/>
                </FrameLayout>
                <TextView
                    android:id="@+id/fee3"
                    android:layout_width="78dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/fill_white_red_border_corner_8"
                    android:text="100"
                    android:layout_marginLeft="18dp"
                    android:gravity="center"
                    android:textColor="@color/bg_toolbar"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:clipChildren="false">
                <TextView
                    android:id="@+id/fee4"
                    android:layout_width="78dp"
                    android:layout_height="40dp"
                    android:background="@drawable/fill_white_red_border_corner_8"
                    android:text="200"
                    android:gravity="center"
                    android:textColor="@color/bg_toolbar"/>
                <TextView
                    android:id="@+id/fee5"
                    android:layout_width="78dp"
                    android:layout_height="40dp"
                    android:background="@drawable/fill_white_red_border_corner_8"
                    android:text="500"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:textColor="@color/bg_toolbar"/>
                <EditText
                    android:id="@+id/fee6"
                    android:layout_width="78dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="18dp"
                    android:textColor="@color/white"
                    android:text="dd"
                    android:gravity="center"
                    android:background="@drawable/fill_red_borderless_corners_4"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="28dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#4d4d4d"
                android:text="1、选择充值金额"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4d4d4d"
                android:text="充值金额："
                />
            <TextView
                android:id="@+id/tv_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#ED4343"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_e4e4e4"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:id="@+id/alipay"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:layout_marginRight="21dp"
            android:layout_marginLeft="21dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_alipay"
                android:layout_marginRight="14dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#aa000000"
                    android:textSize="10sp"
                    android:text="支付宝支付"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#aa000000"
                    android:textSize="8sp"
                    android:text="推荐使用支付宝进行付款"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">
                <TextView
                    android:layout_width="48dp"
                    android:layout_height="18dp"
                    android:gravity="center"
                    android:textSize="8sp"
                    android:text="抽万元大奖"
                    android:textColor="#01AAEF"
                    android:background="@drawable/fill_white_blue_border_normal"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_switch_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_checked"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_e4e4e4"/>
        <LinearLayout
            android:id="@+id/wechat_pay"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:layout_marginRight="21dp"
            android:layout_marginLeft="21dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_wechat"
                android:layout_marginRight="14dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#aa000000"
                    android:textSize="10sp"
                    android:text="微信支付"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#aa000000"
                    android:textSize="8sp"
                    android:text="可以使用微信支付（最低10元）"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_switch_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_not_check"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_e4e4e4"/>
        <LinearLayout
            android:id="@+id/qq_pay"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:layout_marginRight="21dp"
            android:layout_marginLeft="21dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_qq"
                android:layout_marginRight="14dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#aa000000"
                    android:textSize="10sp"
                    android:text="qq支付"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#aa000000"
                    android:textSize="8sp"
                    android:text="推荐使用QQ钱包进行支付"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_switch_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_not_check"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_e4e4e4"/>
        <LinearLayout
            android:id="@+id/jd_pay"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:layout_marginRight="21dp"
            android:layout_marginLeft="21dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_jd_pay"
                android:layout_marginRight="14dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#aa000000"
                    android:textSize="10sp"
                    android:text="京东支付"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#aa000000"
                    android:textSize="8sp"
                    android:text="欢迎开通京东支付的用户使用"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_switch_jd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_not_check"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_e4e4e4"/>
        <LinearLayout
            android:id="@+id/union_pay"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:layout_marginRight="21dp"
            android:layout_marginLeft="21dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_union_pay"
                android:layout_marginRight="14dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#aa000000"
                    android:textSize="10sp"
                    android:text="网银支付"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#aa000000"
                    android:textSize="8sp"
                    android:text="欢迎使用银联在线进行支付"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_switch_union"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_not_check"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_e4e4e4"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_pay"
            android:text="立即充值"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:src="@drawable/czsm"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:src="@drawable/czyh"/>
    </LinearLayout>

</ScrollView>